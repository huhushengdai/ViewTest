<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--线-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#999999</item>
    </style>

    <style name="chat_toggle_button" parent="Base.Widget.AppCompat.DrawerArrowToggle.Common">
        <item name="android:background">@null</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:checked">false</item>
    </style>

    <!--聊天信息——头像-->
    <style name="MessageHead">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>
    <!--聊天信息——文字内容-->
    <style name="MessageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--聊天信息——图片-->
    <style name="MessageImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--聊天信息——语音-->
    <style name="MessageVoice">
        <item name="android:layout_width">11dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
